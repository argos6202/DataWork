<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Frm_Registro">

    <RelativeLayout
        android:layout_marginTop="-10sp"
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:backgroundTint="@color/black"
            android:id="@+id/image"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_background" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30sp">
            <TextView
                android:textColor="@color/white"
                android:fontFamily="@font/sfblack"
                android:textSize="30sp"
                android:text="Hola,\nRecupera\ntu contraseÃ±a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:padding="30sp"
        android:layout_below="@id/header"
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="-20sp"
            android:id="@+id/imagen"
            android:layout_below="@id/header"
            android:src="@drawable/signup_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20sp"
            android:fontFamily="@font/sfblack"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/emailRecuperar"
            android:inputType="textEmailAddress"
            android:layout_marginTop="12sp"
            android:textAlignment="textStart"
            android:paddingTop="12sp"
            android:paddingBottom="12sp"
            android:paddingLeft="20sp"
            android:background="@drawable/ovall_line"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Ingrese su email"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btnRecuperar"
            android:shadowColor="@color/black"
            android:textSize="20sp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:elevation="10sp"
            android:layout_marginTop="12sp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/white"
            android:text="Recuperar"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>